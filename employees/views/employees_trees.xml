<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="view_hr_employee_tree_custom">
        <field name="name">hr.employee.tree.custom</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='work_email']" position="after">
                <field name="phone_number"/>
                <field name="job_id"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_hr_employee_form_custom">
        <field name="name">hr.employee.form.custom</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']/group" position="inside">
                <group>
                    <field name="phone_number"/>
                    <field name="job_id"/>
                </group>
            </xpath>
        </field>
    </record>

    <menuitem id="menu_custom_hr_employee_root"
              name="Custom Employees"
              parent="hr.menu_hr_root"
              sequence="20"/>
    <record model="ir.actions.act_window" id="action_hr_employee_custom">
        <field name="name">Employees</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first employee
            </p>
        </field>
    </record>
    <menuitem id="menu_custom_hr_employee" 
              name="Employees" 
              parent="menu_custom_hr_employee_root" 
              action="action_hr_employee_custom"
              sequence="10"/>

</odoo>
