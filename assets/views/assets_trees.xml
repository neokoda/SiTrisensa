<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree (List) View -->
    <record model="ir.ui.view" id="view_custom_asset_list">
        <field name="name">custom.asset.list</field>
        <field name="model">custom.asset</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="description"/>
                <field name="stock"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="view_custom_asset_form">
        <field name="name">custom.asset.form</field>
        <field name="model">custom.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="stock"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
